.container
  .col-xs-12.col-sm-10.col-sm-offset-1
    .panel.panel-default
      .panel-heading.panel-heading-login
        %h3
          %span.glyphicon.glyphicon-plus
          New #{resource_name.to_s.humanize}
      .panel-body
        / .col-xs-12.col-sm-10.col-sm-offset-1
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),wrapper: :horizontal_input_group) do |f|
          = f.error_notification
          .form-inputs
            = f.input :email, required: true, autofocus: true
            %br
            %br
            = f.input :firstname, required: true  
            %br
            = f.input :lastname, required: true
            %br
            %br
            = f.input :password, required: true
            %br
            = f.input :password_confirmation, required: true
          .form-actions
            %br
            %br
            = f.button :submit, "Create account"
= render "devise/shared/links"
