.container
  .col-xs-12.col-sm-10.col-sm-offset-1
    .panel.panel-default
      .panel-heading.panel-heading-login
        %h3
          %span.glyphicon.glyphicon-plus
          New #{resource_name.to_s.humanize}
      .panel-body
        / .col-xs-12.col-sm-10.col-sm-offset-1
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :horizontal_input_group) do |f|
          = f.error_notification
          .form-inputs
            %span
              = f.input :email, required: true, autofocus: true, hint: "this will be your login"
            %span
              = f.input :firstname, required: true
            %span
              = f.input :lastname, required: true, hint: "please give us your fullname to autosign your own reviews"
            %span
              = f.input :password, required: true, hint: "at least 8 characters"
            %span.row
              = f.input :password_confirmation, required: true
          %hr
          .form-actions
            = f.button :submit, "Create account"
= render "devise/shared/links"
